<Window x:Class="ProjetoBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Matrícula" HorizontalAlignment="Left" Margin="48,86,0,0" VerticalAlignment="Top" Width="82"/>
        <Button x:Name="ButtonPesquisar" Content="Pesquisar" HorizontalAlignment="Left" Margin="329,92,0,0" VerticalAlignment="Top" Width="71" Click="button_pesquisar"/>
        <Label Content="Endereço" HorizontalAlignment="Left" Margin="48,183,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="CPF" HorizontalAlignment="Left" Margin="48,117,0,0" VerticalAlignment="Top" Width="82"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="48,152,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="TextBoxMatricula" TextWrapping="Wrap" Text="TextBox" Margin="135,90,506,322" TextChanged="TextBox_TextChanged_1"/>
        <TextBox x:Name="TextBoxCPF" TextWrapping="Wrap" Text="TextBox" Margin="135,122,506,290" TextChanged="TextBox_TextChanged_2"/>
        <TextBox x:Name="TextBoxNome" TextWrapping="Wrap" Text="TextBox" Margin="135,154,506,258" TextChanged="TextBox_TextChanged_3"/>
        <TextBox x:Name="TextBoxEndereco" TextWrapping="Wrap" Text="TextBox" Margin="135,186,506,211" TextChanged="TextBox_TextChanged_4"/>
        <Button x:Name="ButtonSalvar" Content="Salvar" HorizontalAlignment="Left" Margin="329,122,0,0" VerticalAlignment="Top" Width="71" Click="button_salvar"/>
        <Button x:Name="ButtonExcluir" Content="Excluir" HorizontalAlignment="Left" Margin="329,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.377,2.426" Width="71" Click="button_excluir"/>
        <Button x:Name="ButtonLimpar" Content="Limpar" HorizontalAlignment="Left" Margin="329,194,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.377,2.426" Width="71" Click="button_limpar"/>
        <Label Content="Dados do Empregado" HorizontalAlignment="Left" Margin="48,26,0,0" VerticalAlignment="Top" Width="237" FontWeight="Bold" FontSize="20"/>

    </Grid>
</Window>
